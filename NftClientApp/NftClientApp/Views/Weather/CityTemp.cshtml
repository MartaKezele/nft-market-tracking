@model NftClientApp.ViewModels.CityTempViewModel

@{
    ViewBag.Title = "Get city temperature";
}

<div class="text-center">
    <h1 class="display-4 mb-4">Get city temperature</h1>
    <div class="d-flex justify-content-center">
        <div class="col-md-4">
            <form asp-action="CityTemp">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group my-4">
                    <input type="submit" value="Get temperature" class="btn btn-primary" />
                </div>
                @{
                    string classes = ViewBag.Success == false ? "alert-danger" : "alert-info";
                    if (ViewBag.Response != null)
                    {
                        <p class=@classes>@ViewBag.Response</p>
                    }
                }
            </form>
        </div>
    </div>

    <div>
        <a asp-controller="Home" asp-action="Index">Back</a>
    </div>
</div>