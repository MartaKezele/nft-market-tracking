@model NftClientApp.ViewModels.FilterNftsViewModel

@{
    ViewBag.Title = "Filter NFTS";
}

<div class="text-center">
    <h1 class="display-4 mb-4">Filter NFTS by collection</h1>
    <div class="d-flex justify-content-center">
        <div class="col-md-4">
            <form asp-action="FilterNfts">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group my-4">
                    <input type="submit" value="Filter" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    @{
        if (ViewBag.Success == false)
        {
            <p class="alert-danger">@ViewBag.Response</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nfts[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nfts[0].Url)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nfts[0].DateTimeSold)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nfts[0].PriceUsd)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nfts[0].Collection.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nfts[0].Collection.Url)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Nfts)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <a href="@item.Url">
                                    @item.Name
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateTimeSold)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PriceUsd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Collection.Name)
                            </td>
                            <td>
                                <a href="@item.Collection.Url">
                                    @item.Collection.Name
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
    <div>
        <a asp-controller="Home" asp-action="Index">Back</a>
    </div>
</div>
